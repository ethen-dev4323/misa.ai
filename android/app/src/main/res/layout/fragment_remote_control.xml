<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/misa_background"
    tools:context=".ui.RemoteControlFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:tint="@color/misa_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remote Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/misa_text"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            android:tint="@color/misa_text" />

    </LinearLayout>

    <!-- Screen View -->
    <androidx.cardview.widget.CardView
        android:id="@+id/screenCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <!-- Screen Preview -->
            <ImageView
                android:id="@+id/ivScreenPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/screen_preview"
                android:visibility="visible" />

            <!-- Loading Indicator -->
            <LinearLayout
                android:id="@+id/loadingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/misa_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connecting to desktop..."
                    android:textSize="14sp"
                    android:textColor="@color/misa_text"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- Connection Status Overlay -->
            <LinearLayout
                android:id="@+id/statusOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/status_overlay_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_margin="8dp">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/status_indicator_disconnected"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disconnected"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLatency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0ms"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Touch Feedback -->
            <View
                android:id="@+id/touchFeedback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/touch_feedback"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/control_panel_background"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Primary Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Mouse Mode -->
            <LinearLayout
                android:id="@+id/mouseModeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mouse"
                    android:tint="@color/misa_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mouse"
                    android:textSize="12sp"
                    android:textColor="@color/misa_text"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Keyboard Mode -->
            <LinearLayout
                android:id="@+id/keyboardModeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_keyboard"
                    android:tint="@color/misa_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard"
                    android:textSize="12sp"
                    android:textColor="@color/misa_text"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Scroll Mode -->
            <LinearLayout
                android:id="@+id/scrollModeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_scroll"
                    android:tint="@color/misa_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scroll"
                    android:textSize="12sp"
                    android:textColor="@color/misa_text"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Gesture Mode -->
            <LinearLayout
                android:id="@+id/gestureModeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/control_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_gesture"
                    android:tint="@color/misa_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gesture"
                    android:textSize="12sp"
                    android:textColor="@color/misa_text"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Secondary Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Touch Sensitivity"
                android:textSize="12sp"
                android:textColor="@color/misa_text"
                android:layout_marginEnd="16dp" />

            <SeekBar
                android:id="@+id/sbSensitivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/misa_primary"
                android:thumbTint="@color/misa_primary" />

            <TextView
                android:id="@+id/tvSensitivityValue"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="12sp"
                android:textColor="@color/misa_text"
                android:gravity="end"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeftClick"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Left Click"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/misa_primary"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/btnRightClick"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Right Click"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/misa_secondary"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>